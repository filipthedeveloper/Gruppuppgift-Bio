
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <title>Profil</title>
</head>
<body>
    <div>
       
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/Home/Index">Hem</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="~/Film/Index">Filmer</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Kontakt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">Om</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/Index">Profil</a>
                    </li>
                </ul>
            </div>
        </nav>

    </div>
    <div class="container px-4 py-5 mx-auto">
        <div class="card card0">
            <div class="d-flex flex-lg-row flex-column-reverse">
                <div class="card card1">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-10 my-5">
                            <div class="row justify-content-center px-3 mb-3">
                                <img class="logga" src="~/images/biologga.png" />
                            </div>
                            <h3 class="mb-5 text-center heading">Vi är SystemBio!</h3>
                            <h6 class="msg-info">Logga in</h6>
                            <!--Formulär för att logga in-->
                            <form method="post" action="@Url.Action("Index", "Login")">
                                <div class="form-group"> <label class="form-control-label text-muted">E-mail</label> <input type="text" id="email" name="email" placeholder="E-mail" class="form-control"> </div>
                                <div class="form-group"> <label class="form-control-label text-muted">Lösenord</label> <input type="password" id="losenord" name="losenord" placeholder="Lösenord" class="form-control"> </div>
                                <div class="row justify-content-center my-3 px-3"> <input class="btn-block btn-color" style="color:white !important;" type="submit" value="Logga in" /> </div>
                                <div>@Html.ValidationSummary()</div>
                                
                            </form>
                            
                        </div>
                    </div>
                    <!--Knapp som går till att skapa nyt konto-->
                    <div class="bottom text-center mb-5">
                        <a href="/Login/Create" class="sm-text mx-auto mb-3">Har du inget konto?<button class="btn btn-white ml-2">Skapa nytt</button></a>
                    </div>
                </div>
                <div class="card card2">
                    <div class="my-auto mx-md-5 px-md-5 right">
                        <h3 class="text-white">Vi är mer än ett företag.</h3> <small class="text-white">
    SystemBio-
    En av världens ledande filmoperatörer, som hanterar de mest respekterade varumärkena på stora europeiska marknader och Taiwan, som sträcker sig över tio länder, över 280 webbplatser och över 2400 skärmar.
</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
</body>
</html>
